
<%= sortable "title" %>
<%= sortable "author" %>

<ul>
  <% @books.each do |book| %>
    <li>
      <%= link_to( image_tag(book.cover), book_path(book), class: "book-#{book.id}") %>
      <%= book.title %>
      <% book.authors.each do |author| %>
        <%= author.name %>
      <% end %>
      <% book.genres.each do |genre| %>
        <%= genre.name %>
      <% end %>
      <%= book.description %>
    </li>
  <% end %>
</ul>
